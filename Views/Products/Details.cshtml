@model VendingMachineApp.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            Quantity Available
        </dt>
        <dd class="col-sm-10">
            @Model.QuantityAvailable
        </dd>
    </dl>
    <p>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </p>
</div>
